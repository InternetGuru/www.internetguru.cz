<?xml version="1.0" encoding="utf-8" ?>
<InputVar>

  <fn id="monthcs" fn="replace">
    <data name="leden">ledna</data>
    <data name="únor">února</data>
    <data name="březen">března</data>
    <data name="duben">dubna</data>
    <data name="květen">května</data>
    <data name="červen">června</data>
    <data name="červenec">července</data>
    <data name="srpen">srpna</data>
    <!-- <data name="září">září</data> -->
    <data name="říjen">října</data>
    <data name="listopad">listopadu</data>
    <data name="prosinec">prosince</data>
  </fn>
  <fn id="dateformat" fn="strftime" format="%e. %B %Y"/>
  <fn id="dateformatcs" fn="sequence">
    <call fn="dateformat"/>
    <call fn="monthcs"/>
  </fn>
  <var id="cyear" fn="strftime" format="%Y" data="$cms-ctime"/>
  <var id="year" fn="strftime" format="%Y" data="now"/>

  <var id="today" fn="dateformatcs" data="now"/>
  <var id="myctime" fn="dateformatcs" data="$cms-ctime"/>
  <var id="mymtime" fn="dateformatcs" data="$cms-mtime"/>
  <var id="myauthor" fn="link" href="#@$cms-authorid" data="$cms-author"/>

  <var id="linkctime" fn="dateformatcs" data="@$contentlink-ctime"/>
  <var id="linkmtime" fn="dateformatcs" data="@$contentlink-mtime"/>
  <var id="linkauthor" fn="link" href="#@$contentlink-authorid" data="@$contentlink-author"/>
  <var id="creation" data="Autorem následujícího obsahu je $linkauthor ze dne $linkctime"/>

  <var id="linkresp" fn="link" href="#@$contentlink-respid" data="@$contentlink-resp"/>
  <var id="resp" data="Za obsah této stránky zodpovídá $linkresp."/>
  <var id="modified" data="Obsah této stránky byl naposledy upraven dne $linkmtime."/>

</InputVar>