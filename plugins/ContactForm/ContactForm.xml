<?xml version="1.0" encoding="utf-8" ?>
<ContactForm>

  <!-- povinné proměnné rozšíření ContactForm -->
  <var id="secret" modifyonly="modifyonly">SECRET_PHRASE</var> <!-- zabezpečení formulářů -->
  <var id="adminaddr" modifyonly="modifyonly">[e-mail kontaktní osoby]</var> <!-- povinný údaj -->

  <!-- nepovinné proměnné rozšíření ContactForm -->
  <var id="adminname" modifyonly="modifyonly"></var> <!-- nepovinné jméno kontaktní osoby -->
  <var id="servername" modifyonly="modifyonly"></var> <!-- nepovinný název společnosti -->
  <var id="success" modifyonly="modifyonly">Zpráva byla úspěšně odeslána</var>
  <var id="subject" modifyonly="modifyonly">Nová zpráva kontaktního formuláře</var>
  <var id="copymsg" modifyonly="modifyonly">Toto je kopie zprávy, kterou jste poslal/a z webu</var>
  <var id="nothing" modifyonly="modifyonly">n/a</var>

  <!--
    Pravidla kontrol textových prvků formuláře regulárním výrazem
    rule.id identifikátor pro asociaci pravidla k formulářovému prvku
    rule.title (nepovinné) popis pravidla zobrazený při chybě
  -->
  <rule id="rule-telephone" title="Hodnota musí obsahovat aspoň 9 čísel">(\d\D*){9,}</rule>
  <rule id="rule-email" title="Hodnota musí mít formát e-mailové adresy">^[_a-zA-Z0-9-]+(\.[_a-zA-Z0-9-]+)*@[a-zA-Z0-9-]+(\.[a-zA-Z0-9-]+)*\.[a-zA-Z]{2,}$</rule>

  <!--
    Specifické proměnné konkrétního formuláře a textových prvků

    form.secret [text]
    form.adminaddr [text]
    form.adminname [text]
    form.servername [text]
    form.success [text]
    form.subject [text]
    form.copymsg [text]

    input.name == clientaddr to define client address (required)
    input.name == clientname to define client name (optional)
    input.name == copycond to define send a copy to client addr (optional)

    input[type='text'].rule [rule.name value]
    input.required [text or empty]

    textarea.rule [rule.name value]
    textarea.required [text or empty]
  -->
  <form id="basic">
    <dl>
      <dt><label for="fullname">Celé jméno</label></dt>
      <dd><input type="text" id="fullname" required="Jméno je povinné"/></dd>
      <dt><label for="email">E-mail</label></dt>
      <dd><input type="text" rule="rule-email" id="email" name="clientaddr" required="Adresa musí být ve správném formátu"/></dd>
      <!-- <dd><label for="email" var="email">n/a</label></dd> -->
      <dt><label for="telephone">Telefon (nepovinné)</label></dt>
      <dd><input type="text" rule="rule-telephone" id="telephone"/></dd>
      <!-- <dd><label for="telephone" var="telephone">n/a</label></dd> -->
      <dt><label for="msg">Zpráva</label></dt>
      <dd><textarea id="msg" required="Zpráva je povinná"></textarea></dd>
      <dt><label for="copycond">Poslat kopii na mejl odesílatele</label></dt>
      <dd><input type="checkbox" id="copycond"/></dd>
      <dt>Zájem o odebírání témat</dt>
      <dd><label><input type="checkbox" name="t[]"/> téma1</label></dd>
      <dd><label><input type="checkbox" name="t[]"/> téma2</label></dd>
      <dd><label><input type="checkbox" name="t[]"/> téma3</label></dd>
      <dt>Pohlaví</dt>
      <dd><label><input type="radio" name="gender" /> žena</label></dd>
      <dd><label><input type="radio" name="gender" value="m" checked="checked"/> muž</label></dd>
      <dt><label for="country">Země</label></dt>
      <dd><select id="country">
        <option>Česká republika</option>
        <option value="england" selected="selected">Anglie</option>
        <option>Německo</option>
      </select></dd>
      <dt><label for="submit">Odeslání formuláře</label></dt>
      <dd><label><input type="checkbox" checked="checked" required="Musíte souhlasit s obchodními podmínkami"/> Souhlas s podmínkami</label></dd>
      <dd><input type="submit" id="submit"/></dd>
    </dl>
  </form>

  <message for="basic">Jméno: $fullname, verze cms: $cms-version, témata: $t ddd</message>

</ContactForm>
