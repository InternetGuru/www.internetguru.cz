<?xml version="1.0" encoding="utf-8" ?>
<?xml-model href="/lib/HTMLPlus.rng"?>
<body xml:lang="cs">
  <h id="h.adf" var="ContentAdmin:heading">Administrace</h>
  <description>Administrace souboru <samp var="ContentAdmin:filename"/> ve formátu <samp var="ContentAdmin:schema"/></description>
  <ol class="errors">
    <li var="ContentAdmin:errors"/>
  </ol>
  <form action="" method="post" var="ContentAdmin:linkAdmin@action">
    <fieldset><legend>Výchozí soubor</legend>
      <blockcode var="ContentAdmin:defaultContent">n/a</blockcode>
    </fieldset>
    <fieldset><legend>Uživatelský soubor, mód <samp var="ContentAdmin:mode"/></legend>
      <textarea cols="40" name="content" rows="20" var="ContentAdmin:type@class ContentAdmin:content">n/a</textarea>
      <input name="userfilehash" type="hidden" value="" var="ContentAdmin:userfilehash@value"/>
      <ul>
        <li><input name="saveandgo" type="submit" value="Uložit a odejít (Ctrl+Shift+S)"/></li>
        <li><input name="saveandstay" type="submit" value="Uložit (Ctrl+S)"/></li>
        <li><a href="" var="ContentAdmin:linkAdmin@href">Zahodit změny</a></li>
        <li><a href="" var="ContentAdmin:link@href">Zahodit změny a odejít</a></li>
      </ul>
    </fieldset>
    <fieldset><legend>Výsledek, mód <samp var="ContentAdmin:mode"/></legend>
      <blockcode var="ContentAdmin:resultContent">n/a</blockcode>
    </fieldset>
  </form>
</body>