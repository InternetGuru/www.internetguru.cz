<?xml version="1.0" encoding="utf-8" ?>
<ContentBalancer>

  <!--
    Výstupní šablony

    Dostupné proměnné:
      headingplus ... proměnná short pokud existuje, jinak heading
      heading, link, headingplus, short, desc, kw

    Atributy elementu item:
      id (povinné)      ... unikátní název šablony
      wrapper (povinné) ... název obalovacího elementu šablony
  -->
  <item id="simple" wrapper="ul" modifyonly="modifyonly">
    <li><a var="link@href headingplus">n/a</a></li>
  </item>
  <item id="long" wrapper="dl" modifyonly="modifyonly">
    <dt><a var="link@href heading">n/a</a></dt>
    <dd var="kw">Bez klíčových slov</dd>
    <dd var="desc">Bez popisu</dd>
  </item>

  <!--
    Nastavení

    default ... výchozí šablona
    level   ... od jaké úrovně nadpisů se vyvažuje, 0 pro vypnutí vyvažování
    limit   ... minimální množství podnadpisů
  -->
  <var id="default" modifyonly="modifyonly">simple</var>
  <var id="level" modifyonly="modifyonly">2</var>
  <var id="limit" modifyonly="modifyonly">2</var>

</ContentBalancer>
