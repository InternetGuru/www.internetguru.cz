<?xml version="1.0" encoding="utf-8" ?>
<Basket>

  <var id="formpage" modifyonly="modifyonly">objednavka</var>
  <var id="formid" modifyonly="modifyonly">objednavka</var>
  <var id="success" modifyonly="modifyonly">Zboží bylo úspěšně přidáno do košíku</var>
  <var id="gotoorder" modifyonly="modifyonly">Přejít k objednávce</var>
  <var id="delete" modifyonly="modifyonly">Vyprázdnit košík</var>
  <var id="deletesucess" modifyonly="modifyonly">Košík byl úpěšně vyprázdněn</var>
  <var id="currency">Kč</var>

  <var id="summary-product" modifyonly="modifyonly">– $name ($product-id) … $summary-ammount ks * $price $currency</var> <!-- proměnná $summary-ammount -->
  <var id="summary-separator" modifyonly="modifyonly">=====</var>
  <var id="summary-total" modifyonly="modifyonly">Celková cena: $summary-total $currency</var> <!-- proměnná $summary-total -->

  <var id="basket-button">
    <a class="basket-button" var="gotoorder@title formpage@href"><span class="flaticon-shopping232" var="gotoorder"></span></a>
    <a class="basket-button basket-button-delete" var="delete@title deletelink@href"><span>x</span></a>
  </var> <!-- proměnná deletelink -->

  <template id="basic">
    <form method="post" var="action@action" class="product">
      <dl>
        <dt var="name-name"></dt>
        <dd><span var="name"></span></dd>
        <dt var="image-name"></dt>
        <dd><span var="image"/></dd>
        <dt var="price-name"></dt>
        <dd><span var="price"/> <span var="currency"/></dd>
        <dd>
          <ul>
            <li><input type="text" required="required" pattern="[1-9][0-9]*" name="cnt" value="1" /></li>
            <li>
              <input type="hidden" name="basket"/>
              <input type="hidden" name="id" var="product-id@value"/>
              <button type="submit" title="Přidat do košíku"><span class="flaticon-shopping232">Koupit</span></button>
            </li>
          </ul>
        </dd>
      </dl>
    </form>
  </template>

  <!--

  Definice produktu jako
    - element product s atributem id (a libovolnými dalšími) obsahující
    - libovolný počet libovolných elementů, jejich hodnot a atributů, z toho
    - nepovinný element price s číselnou hodnotou.
  Vytvořené proměnné ve formátu
    - [název_elementu] = [hodnota_elementu]
    - [název_elementu]-[název atributu] = [hodnota_atributu]

  Ukázka produktu:
  <product id="hreben-modry-x">
    <price name="Cena">152</price>
    <name name="Název">Modrý hřeben, velikost X</name>
    <image name="Obrázek">
      <a href="files/hreben-modry-x.jpg">
        <object type="image/jpeg" data="files/thumbs/hreben-modry-x.jpg">Modrý hřeben, velikost X</object>
      </a>
    </image>
  </product>

  Vytvořené proměnné
    - product-id = hreben-modry-x
    - price = <strong>152</strong>
    - price-name = Cena
    - name = <span>Modrý hřeben, velikost X</span>
    - name-name = Název
    - image = [odkaz na obrázek]
    - image-name = Obrázek

  -->

</Basket>
