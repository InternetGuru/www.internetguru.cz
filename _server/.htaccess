RewriteEngine  on

##
# set rewrite base
RewriteRule   .                      - [E=RB:/]
RewriteCond   %{HTTP_HOST}           ^localhost$
RewriteCond   %{SCRIPT_FILENAME}     www/([^/]+)
RewriteRule   .                      - [E=RB:/%1/]

##
# remove trailing slash, eg. /mivepo/ -> /mivepo
RewriteCond   %{REQUEST_FILENAME}    !-f
RewriteRule   ^(.+)\/$               %{ENV:RB}$1  [R=301,L]

##
# run findex.php iff file request
RewriteRule   .                      - [E=SCRIPT:index.php]
RewriteCond   %{REQUEST_URI}         \.[a-z0-9]{2,4}$ [NC]
RewriteRule   .                      - [E=SCRIPT:findex.php]

##
# create _GET parameters
#RewriteCond   %{REQUEST_URI}         !\.[a-z0-9]{2,4}$ [NC]
RewriteCond   %{REQUEST_FILENAME}    !-f
RewriteRule   .*                     %{ENV:RB}%{ENV:SCRIPT}?q=$0 [QSA]